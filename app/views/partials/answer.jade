section
  .container(ng-controller='AnswerCtrl')
      h2.section-title.text-center.wow.fadeInDown Question {{ currentQuestion + 1 }} / {{ questions.length }}
      div(ng-controller='AnswerCtrl')
          p {{ question.text }}
          p Question {{ (optional ? "optionnelle" : "obligatoire") }}, {{ question.choices_available }} réponses possibles
          ul.list-group
            li.choice.list-group-item(ng-repeat="choice in question.choices" ng-click="select(choice)" ng-class="{'list-group-item-success' : choice.selected != undefined && choice.selected}") {{ choice.text }}
          span.btn.btn-primary(role="button", ng-click="previous()", ng-disabled="prevDisabled") Précédent
          span.btn.btn-primary.pull-right(role="button", ng-click="next()", ng-disabled="nextDisabled") {{ nextOrSubmit }}
