section
  .container
      h2.section-title.text-center.wow.fadeInDown Statistiques
      div(ng-controller='statsInstanceController')
        h2.text-center {{pollName}} / {{instanceName}}
        #myCarousel.carousel.slide(data-ride='carousel')

          // Indicators
          //ol.carousel-indicators
          //  li.active(data-target='#myCarousel', data-slide-to='0')
